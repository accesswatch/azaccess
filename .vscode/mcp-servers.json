{
  "$schema": "https://raw.githubusercontent.com/microsoft/vscode-mcp/main/schema/mcp-settings.schema.json",
  "servers": {
    "playwright-a11y": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-playwright"],
      "description": "Playwright browser automation for accessibility testing",
      "env": {
        "PLAYWRIGHT_HEADLESS": "true"
      }
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-github"],
      "description": "GitHub integration for issues and PRs",
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "firecrawl": {
      "command": "npx",
      "args": ["-y", "firecrawl-mcp"],
      "description": "Web scraping for accessibility auditing external sites",
      "env": {
        "FIRECRAWL_API_KEY": "${FIRECRAWL_API_KEY}"
      }
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@anthropic-ai/mcp-server-memory"],
      "description": "Knowledge graph for accessibility patterns and findings"
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "context7-mcp"],
      "description": "Library documentation for accessibility APIs"
    }
  }
}
