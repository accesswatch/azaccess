{
  "name": "azaccess",
  "version": "1.0.0",
  "description": "This repository contains the prototype for the University of Arizona Digital Accessibility website.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "npx serve docs -p 3000",
    "test": "npm run test:a11y",
    "test:a11y": "npx playwright test --config=playwright.a11y.config.js",
    "test:a11y:ui": "npx playwright test --config=playwright.a11y.config.js --ui",
    "test:a11y:report": "npx playwright show-report",
    "audit": "node scripts/axe-audit.js",
    "audit:all": "node scripts/axe-audit.js --all",
    "lint:a11y": "npx axe-linter docs/*.html",
    "lighthouse": "npx lighthouse http://localhost:3000/home.html --only-categories=accessibility --output=html --output-path=./reports/lighthouse.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/accesswatch/azaccess.git"
  },
  "keywords": [
    "accessibility",
    "wcag",
    "a11y",
    "university-of-arizona"
  ],
  "author": "University of Arizona",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/accesswatch/azaccess/issues"
  },
  "homepage": "https://github.com/accesswatch/azaccess#readme",
  "dependencies": {
    "axe-core": "^4.11.0",
    "cheerio": "^1.1.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "axe-playwright": "^2.2.2",
    "playwright": "^1.57.0",
    "@playwright/test": "^1.57.0",
    "serve": "^14.2.0",
    "wait-on": "^7.2.0"
  }
}
